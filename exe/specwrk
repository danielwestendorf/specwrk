#!/usr/bin/env ruby

require "specwrk"
require "specwrk/cli"

trap("INT") do
  if Specwrk.starting_pid == Process.pid && !Specwrk.force_quit
    warn " â†“ Waiting for in-progress work to finish. Interrupt again to force quit (warning: at_exit hooks will be skipped if you force quit)."

    Specwrk.force_quit = true
  elsif Specwrk.starting_pid != Process.pid
    exit(1) if Specwrk.force_quit
    Specwrk.force_quit = true
  end
end

Dry::CLI.new(Specwrk::CLI).call
